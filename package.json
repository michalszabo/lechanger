{
  "name": "lechanger",
  "version": "1.0.0",
  "description": "Lecharger app",
  "author": "Michal Szabo <michal.szabo@email.cz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michalszabo/lechanger.git"
  },
  "scripts": {
    "dev": "concurrently \"cd ./backend && npm run dev\" \"cd frontend && npm run dev\"",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd ./frontend && npm run lint && cd ../backend && npm run lint"
    }
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "husky": "^8.0.1"
  }
}
